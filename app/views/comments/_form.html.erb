<%= form_with model: [ @article,@comment ] do |form| %>

<p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, options_for_select(Visible::VALID_STATUSES.reject{|s| s == 'archived'}), selected: 'public' %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
